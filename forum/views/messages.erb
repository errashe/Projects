<a href="/subsection/<%=@theme.subsection.id%>" class="btn btn-default binp">Back</a>

<div class="panel panel-default">
	<div class="panel-heading"><%= @theme.user[:login] %></div>
	<div class="panel-body"><%= @theme[:text] %></div>
</div>

<% @theme.messages.each do |message| %>

<div class="panel panel-default">
	<div class="panel-body">
		<%= "<b>%s</b>: %s" % [message.user[:login], message[:text]] %>
	</div>
</div>

<% end %>

<% if user %>
	<form action="/theme/<%=params[:id]%>" method="POST">
		<input type="hidden" name="_method" value="PUT" />

		<textarea class="form-control" name="text" cols="30" rows="5"></textarea>
		<input type="submit" class="btn btn-default" style="margin-top: 10px;">
	</form>
<% end %>