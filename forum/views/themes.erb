<a href="/" class="btn btn-default binp">Back</a>
<% if user %>
	<a href="/subsection/<%=@subsection.id%>/create_theme" class="btn btn-default binp">Create theme</a>
<% end %>
<% @subsection.themes.each do |theme| %>

<div class="panel panel-default">
	<div class="panel-body"><a href="/theme/<%= theme[:id] %>"><%= theme[:name] %> (<%= theme.user[:login] %>)</a></div>
</div>

<% end %>