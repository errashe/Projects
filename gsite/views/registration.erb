<div class="row">
	<form class="col-md-6 col-md-offset-3">
		<div class="form-group">
			<label for="email-input">Адрес электронной почты</label>
			<input type="email" class="form-control" id="email-input" placeholder="Адрес электронной почты">
		</div>
		<div class="form-group">
			<label for="password-input">Пароль</label>
			<input type="password" class="form-control" id="password-input" placeholder="Пароль">
		</div>
		<div class="form-group">
			<label for="password-input-confirmation">Подтверждение пароля</label>
			<input type="password" class="form-control" id="password-input-confirmation" placeholder="Подтверждение пароля">
		</div>
		<div class="form-group">
			<label for="name-input">ФИО</label>
			<input type="password" class="form-control" id="name-input" placeholder="ФИО">
		</div>
		<button type="submit" class="btn btn-default">Зарегистрироваться</button>
	</form>
</div>